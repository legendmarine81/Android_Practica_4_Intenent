<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/black">

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bvn"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implicitos"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="abrirNavegador"
            android:text="ABRE EL NAVEGADOR"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="soyelMapa"
            android:text="ABRE UN MAPA"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="abrirCamara"
            android:text="Abrir Camara"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="abrirTelefono"
            android:text="Abre Un Teléfono"
            android:backgroundTint="@color/orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explicito"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/butR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/txt1"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/orange"
            android:text="Regresar al inicio"
            android:onClick="comeBack"/>

        <Button
            android:id="@+id/butR1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/txt1"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/orange"
            android:text="¿Quieres ver la historia de KISS?"
            android:onClick="nextBotton"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>